{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "baseUrl": ".",
    "paths":  {
      "@/app": ["./app/index"],
      "@/app/*": ["./app/*"],

      "@/libs": ["./libs/index"],
      "@/libs/*": ["./libs/*"],

      "@/config": ["./config/index"],
      "@/config/*": ["./config/*"],

      "@/assets": ["./assets/index"],
      "@/assets/*": ["./assets/*"],

      "@/api": ["./api/index"],
      "@/api/*": ["./api/*"],

      "@/utils": ["./utils/index"],
      "@/utils/*": ["./utils/*"],

      "@/components": ["./components/index"],
      "@/components/*": ["./components/*"],

      "@/commands": ["./commands/index"],
      "@/commands/*": ["./commands/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
