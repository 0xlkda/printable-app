{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "baseUrl": ".",
    "paths":  {
      "@/api": ["./api/index"],
      "@/api/*": ["./api/*"],

      "@/app": ["./app/index"],
      "@/app/*": ["./app/*"],

      "@/libs": ["./libs/index"],
      "@/libs/*": ["./libs/*"],

      "@/manager": ["./manager/index"],
      "@/manager/*": ["./manager/*"],

      "@/user": ["./user/index"],
      "@/user/*": ["./user/*"],

      "@/utils": ["./utils/index"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
